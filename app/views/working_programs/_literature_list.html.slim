table class="hollow"
  thead
    tr
      th Name
      th Link
      th Type
      th Edit
      th Delete
  tbody
    - literature.each do |literature|
      tr
        td = literature.name
        td = literature.link
        td = literature.resource_type
        td.edit_link = link_to "Edit", edit_literature_path(literature)
        td.destroy_link = link_to "Destroy", literature, data: { confirm: "Are you sure?" }, method: :delete
