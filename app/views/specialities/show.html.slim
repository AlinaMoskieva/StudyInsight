.rows
  .medium-7.medium-offset-3.columns
    h2= training_direction.name
  .medium-2.columns
    ul.dropdown.menu data-dropdown-menu=""
      li
        a href="#" class="hollow button"  Actions
        ul class="menu"
          li
            = link_to "Edit", edit_training_direction_path
          li
            = link_to "Delete", training_direction, data: { confirm: "Are you sure?" }, method: :delete
  .columns
    .medium-8.columns
      h4 Disciplines
      table class="hollow"
        thead
          tr
            th Name
            th Edit
            th Destroy

        tbody
          - disciplines.each do |discipline|
            tr
              td = link_to discipline.name, discipline
              td = link_to "Edit", edit_discipline_path(discipline)
              td = link_to "Destroy", discipline, data: { confirm: "Are you sure?" }, method: :delete

      br

      = link_to "Add discipline", new_training_direction_discipline_path(training_direction), class: "hollow button"
